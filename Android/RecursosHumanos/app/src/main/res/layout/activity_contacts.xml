<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#bfe3ff"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical">

        <amsi.ipleiria.pt.accordionview.AccordionView
            android:id="@+id/btn_esecs"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="200dp"
            android:paddingTop="10dp"
            android:visibility="visible"
            android:layout_centerHorizontal="true"
            app:isAnimated="false"
            app:heading="ESECS"
            app:isExpanded="false"
            app:isPartitioned="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_telefone_esecs"
                    android:layout_width="250dp"
                    android:layout_height="36dp"
                    android:drawableLeft="@drawable/ic_telefone"
                    android:textColor="#ffffff"
                    android:background="#11000000"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:ems="10"/>

                <TextView
                    android:id="@+id/tv_email_esecs"
                    android:layout_width="250dp"
                    android:layout_height="30dp"
                    android:drawableLeft="@drawable/ic_email"
                    android:textColor="#ffffff"
                    android:background="#11000000"
                    android:layout_below="@id/tv_telefone_esecs"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:ems="10"/>

                <TextView
                    android:id="@+id/tv_fax_esecs"
                    android:layout_width="250dp"
                    android:layout_height="30dp"
                    android:drawableLeft="@drawable/ic_fax"
                    android:textColor="#ffffff"
                    android:background="#11000000"
                    android:layout_below="@id/tv_email_esecs"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:ems="10"/>

            </RelativeLayout>


        </amsi.ipleiria.pt.accordionview.AccordionView>

        <!--ESTG-->
        <amsi.ipleiria.pt.accordionview.AccordionView
