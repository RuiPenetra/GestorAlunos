<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fundo3"
    tools:context=".HomeActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
                >

        <amsi.dei.estg.ipleiria.pt.recursoshumanos.CurvedBottomNavigationView
            android:id="@+id/bottom_nav"
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:backgroundTint="#3F897C"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintEnd_toStartOf="parent">

        </amsi.dei.estg.ipleiria.pt.recursoshumanos.CurvedBottomNavigationView>
    </androidx.constraintlayout.widget.ConstraintLayout>

<RelativeLayout
    android:id="@+id/lin_id"
    android:layout_gravity="bottom|center"
    android:layout_margin="40dp"
    android:background="@drawable/oval"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    >

    <com.sdsmdg.harjot.vectormaster.VectorMasterView
        android:id="@+id/fab"
        android:layout_centerInParent="true"
        android:layout_margin="12dp"
        android:visibility="gone"
        app:elevation="6dp"
        app:vector_src="@drawable/ic_menu_black_24dp"
        android:layout_width="45dp"
        android:layout_height="45dp"/>

    <com.sdsmdg.harjot.vectormaster.VectorMasterView
        android:id="@+id/fab1"
        android:layout_centerInParent="true"
        android:layout_margin="12dp"
        app:elevation="6dp"
        app:vector_src="@drawable/ic_home_black_24dp"
        android:layout_width="45dp"
        android:layout_height="45dp"/>

    <com.sdsmdg.harjot.vectormaster.VectorMasterView
        android:id="@+id/fab2"
        android:layout_centerInParent="true"
        android:layout_margin="12dp"
        android:visibility="gone"
        app:elevation="6dp"
        app:vector_src="@drawable/ic_account_circle_black_24dp"
        android:layout_width="45dp"
        android:layout_height="45dp"/>
</RelativeLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>