<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fundo3"
    tools:context=".StartActivity" >

   <!--<include
       layout="@layout/gridlayout_activity_start"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_centerInParent="true"></include>-->

   <ScrollView
       android:layout_width="fill_parent"
       android:layout_height="fill_parent"
       android:layout_alignParentTop="true"
       android:layout_alignParentLeft="true">

      <LinearLayout
          android:layout_width="fill_parent"
          android:layout_height="fill_parent"
          android:orientation="vertical">

         <RelativeLayout
             android:layout_width="fill_parent"
             android:layout_height="fill_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/header_home">

               <ImageView
                   android:layout_width="90dp"
                   android:layout_height="90dp"
                  android:src="@drawable/user"
                  android:layout_gravity="center"/>
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Nome:"
                   android:textColor="@drawable/fundo2"
                   android:layout_gravity="center"
                   android:textSize="18sp"
                   android:textStyle="bold"
                   android:layout_marginTop="10dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="215dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                >

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="135dp"
                   android:orientation="horizontal"
                   android:layout_marginBottom="10dp"
                   android:background="@android:color/transparent">

                  <androidx.cardview.widget.CardView
                      android:layout_width="0dp"
                      android:layout_height="match_parent"
                      android:layout_gravity="center"
                      android:layout_weight="1"
                      android:layout_marginRight="10dp"
                      app:cardBackgroundColor="#38ABD8"
                      android:orientation="vertical"
                      app:cardCornerRadius="50dp"
                     >

                     <RelativeLayout
                         android:layout_width="match_parent"
                         android:layout_height="match_parent"
                         >

                        <ImageView
                            android:id="@+id/img_calendario"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_centerInParent="true"
                            android:src="@drawable/ic_calendario"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/img_calendario"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:scrollbarSize="16sp"
                            android:text="Calendário"
                            android:textStyle="bold"/>

                        <Button
                            android:id="@+id/btn_calendario"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@android:color/transparent"/>

                     </RelativeLayout>

                  </androidx.cardview.widget.CardView>

                  <androidx.cardview.widget.CardView
                      android:layout_width="0dp"
                      android:layout_height="match_parent"
                      android:layout_gravity="center"
                      android:layout_weight="1"
                      android:layout_marginLeft="10dp"
                      android:orientation="vertical"
                      app:cardCornerRadius="50dp"
                      app:cardBackgroundColor="#38ABD8">

                     <RelativeLayout
                         android:layout_width="match_parent"
                         android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/img_horario"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_centerInParent="true"
                            android:src="@drawable/ic_horario" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/img_horario"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:scrollbarSize="16sp"
                            android:text="Horário"
                            android:textStyle="bold"/>

                        <Button
                            android:id="@+id/btn_horario"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:transformPivotX="50px"
                            android:background="@android:color/transparent"/>

                     </RelativeLayout>

                  </androidx.cardview.widget.CardView>

               </LinearLayout>
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="135dp"
                   android:orientation="horizontal"
                   android:layout_marginBottom="10dp">

                  <androidx.cardview.widget.CardView
                      android:layout_width="0dp"
                      android:layout_height="match_parent"
                      android:layout_gravity="center"
                      android:layout_weight="1"
                      android:layout_marginRight="10dp"
                      android:orientation="vertical"
                      app:cardCornerRadius="50dp"
                      app:cardBackgroundColor="#38ABD8">

                     <RelativeLayout
                         android:layout_width="match_parent"
                         android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/img_forum"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_centerInParent="true"
                            android:src="@drawable/ic_forum" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/img_forum"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:scrollbarSize="16sp"
                            android:text="Forum"
                            android:textStyle="bold"/>

                        <Button
                            android:id="@+id/btn_forum"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@android:color/transparent"/>

                     </RelativeLayout>

                  </androidx.cardview.widget.CardView>

                  <androidx.cardview.widget.CardView
                      android:layout_width="0dp"
                      android:layout_height="match_parent"
                      android:layout_gravity="center"
                      android:layout_weight="1"
                      android:layout_marginLeft="10dp"
                      android:orientation="vertical"
                      app:cardCornerRadius="50dp"
                      app:cardBackgroundColor="#38ABD8">

                     <RelativeLayout
                         android:layout_width="match_parent"
                         android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/img_estatisticas"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_centerInParent="true"
                            android:src="@drawable/ic_estatisticas" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/img_estatisticas"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:scrollbarSize="16sp"
                            android:text="Estatiticas"
                            android:textStyle="bold"/>

                        <Button
                            android:id="@+id/btn_estatisticas"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@android:color/transparent"/>

                     </RelativeLayout>

                  </androidx.cardview.widget.CardView>

               </LinearLayout>

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="135dp"
                   android:orientation="horizontal"
                   android:layout_marginBottom="10dp">

                  <androidx.cardview.widget.CardView
                      android:layout_width="0dp"
                      android:layout_height="match_parent"
                      android:layout_gravity="center"
                      android:layout_weight="1"
                      android:layout_marginRight="10dp"
                      android:orientation="vertical"
                      app:cardCornerRadius="50dp"
                      app:cardBackgroundColor="#38ABD8">

                     <RelativeLayout
                         android:layout_width="match_parent"
                         android:layout_height="match_parent"
                         >

                        <ImageView
                            android:id="@+id/img_pagamentos"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_centerInParent="true"
                            android:src="@drawable/icon_pay" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/img_pagamentos"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:scrollbarSize="16sp"
                            android:text="Pagamentos"
                            android:textStyle="bold"/>

                        <Button
                            android:id="@+id/btn_pagamentos"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:transformPivotX="12dp"
                            android:background="@android:color/transparent"/>

                     </RelativeLayout>

                  </androidx.cardview.widget.CardView>

                  <androidx.cardview.widget.CardView
                      android:layout_width="0dp"
                      android:layout_height="match_parent"
                      android:layout_gravity="center"
                      android:layout_weight="1"
                      android:layout_marginLeft="10dp"
                      android:orientation="vertical"
                      app:cardCornerRadius="50dp"
                      app:cardBackgroundColor="#38ABD8">

                     <RelativeLayout
                         android:layout_width="match_parent"
                         android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/img_configuracoes"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_centerInParent="true"
                            android:src="@drawable/icon_config" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/img_configuracoes"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:scrollbarSize="16sp"
                            android:text="Configurações"
                            android:textStyle="bold"/>

                        <Button
                            android:id="@+id/btn_configuracoes"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@android:color/transparent"/>

                     </RelativeLayout>

                  </androidx.cardview.widget.CardView>

               </LinearLayout>

            </LinearLayout>

         </RelativeLayout>

      </LinearLayout>

   </ScrollView>


</RelativeLayout>
