<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="400dp"
    android:layout_centerHorizontal="true"
    android:layout_centerVertical="true"
    android:gravity="center"
    android:background="#59B9FF"
   >
        <TextView
            android:id="@+id/tv_titulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Criar evento"
            android:textAlignment="center"
            android:textSize="25sp"
            android:layout_margin="20dp"/>


        <TextView
                android:id="@+id/tv_titulo_des"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Titulo :"
                android:textSize="20sp"
            android:layout_below="@id/tv_titulo"/>

        <EditText
            android:id="@+id/ed_titulo"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:textColor="#ffffff"
            android:background="#85FCFCFC"
            android:layout_below="@id/tv_titulo"
            android:layout_toEndOf="@+id/tv_titulo_des"/>


            <TextView
                android:id="@+id/tv_descricao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="4"
                android:text="Descri :"
                android:textSize="20sp"
                android:layout_below="@id/tv_titulo_des"/>

        <EditText
            android:id="@+id/ed_descricao"
            android:layout_width="250dp"
            android:layout_height="98dp"
            android:textColor="#ffffff"
            android:background="#85FCFCFC"
            android:gravity="start|top"
            android:layout_toEndOf="@id/tv_descricao"
            android:layout_below="@id/ed_titulo"
            android:inputType="textMultiLine" />


        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="10dp"
            android:background="@drawable/oval"
            android:padding="20dp"
            android:src="@drawable/ic_guardar"
            android:layout_below="@id/ed_descricao"
            />

</RelativeLayout>