<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Views.DadosPessoaisActivity"
    android:background="#C0E0FF">


        <RelativeLayout
            android:id="@+id/container_main"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="bottom|right">

                <ImageView
                    android:layout_width="250dp"
                    android:layout_height="250dp"
                    android:src="@drawable/img_user"
                    android:alpha="0.10"/>

            </RelativeLayout>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                   android:layout_margin="25dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            android:background="@drawable/btn_retangular"
                            android:src="@drawable/img_user" />


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/container_nome"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="15dp">

                        <TextView
                            android:id="@+id/tv_nome"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="@string/tv_nome"
                            android:textColor="#000000"
                            android:fontFamily="sans-serif-smallcaps"
                            android:textSize="17sp"
                            android:textStyle="bold"
                            android:layout_marginLeft="10dp"/>


                        <EditText
                            android:id="@+id/edt_nome"
                            android:layout_width="match_parent"
                            android:layout_height="35dp"
                            android:background="@drawable/ic_content"
                            android:ems="10"
                            android:hint="Nome"
                            android:enabled="false"
                            android:textColor="#000000"
                            android:paddingLeft="20dp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/container_email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tv_Email"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="@string/tv_email"
                                android:textColor="#000000"
                                android:fontFamily="sans-serif-smallcaps"
                                android:textSize="17sp"
                                android:textStyle="bold"
                                android:layout_marginLeft="10dp"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <EditText
                                android:id="@+id/edt_email"
                                android:layout_width="match_parent"
                                android:layout_height="35dp"
                                android:background="@drawable/ic_content"
                                android:ems="10"
                                android:hint="Email"
                                android:enabled="false"
                                android:textColor="#000000"
                                android:paddingLeft="20dp"/>

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/container_genero"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tv_genero"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="@string/tv_genero"
                                android:textColor="#000000"
                                android:fontFamily="sans-serif-smallcaps"
                                android:textSize="17sp"
                                android:textStyle="bold"
                                android:layout_marginLeft="10dp"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <EditText
                                android:id="@+id/edt_genero"
                                android:layout_width="match_parent"
                                android:layout_height="35dp"
                                android:background="@drawable/ic_content"
                                android:ems="10"
                                android:hint="Género"
                                android:enabled="false"
                                android:textColor="#000000"
                                android:paddingLeft="20dp" />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/container_telemovel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tv_telemovel"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="@string/tv_telemovel"
                                android:textColor="#000000"
                                android:fontFamily="sans-serif-smallcaps"
                                android:textSize="17sp"
                                android:textStyle="bold"
                                android:layout_marginLeft="10dp"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <EditText
                                android:id="@+id/edt_telemovel"
                                android:layout_width="match_parent"
                                android:layout_height="35dp"
                                android:background="@drawable/ic_content"
                                android:ems="10"
                                android:hint="Telemóvel"
                                android:enabled="false"
                                android:textColor="#000000"
                                android:paddingLeft="20dp" />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/container_data_nascimento"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tv_data_nascimento"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="@string/tv_data_nascimento"
                                android:textColor="#000000"
                                android:textSize="17sp"
                                android:fontFamily="sans-serif-smallcaps"
                                android:textStyle="bold"
                                android:layout_marginLeft="10dp"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <EditText
                                android:id="@+id/edt_data_nascimento"
                                android:layout_width="match_parent"
                                android:layout_height="35dp"
                                android:background="@drawable/ic_content"
                                android:ems="10"
                                android:hint="Data nascimento"
                                android:enabled="false"
                                android:textColor="#000000"
                                android:paddingLeft="20dp"  />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>


            </ScrollView>

        </RelativeLayout>

</RelativeLayout>