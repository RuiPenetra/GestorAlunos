<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape android:shape="oval">
            <solid android:color="#D8D8D8"/>
            <corners
                android:radius="4dp"/>
        </shape>
    </item>

    <item>
        <shape android:shape="oval">
            <corners
                android:radius="4dp"/>

            <solid android:color="#FF665C"/>
        </shape>
    </item>
</selector>

